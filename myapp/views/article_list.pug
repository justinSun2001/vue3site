extends layout

block content
  h1= title
  
  ul
    - article_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
    each article in article_list
      li 
        a(href=article.url) #{article.title}
        |  (#{article.author.name})

    else
      li There are no articles.
