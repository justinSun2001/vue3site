extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input.form-control(type='text', placeholder='英文名称' name='name' required='true' value=(undefined===team ? '' : team.name) )
      label(for='cname') cName:
      input.form-control(type='text', placeholder='中文名称' name='cname' value=(undefined===team ? '' : team.cname))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg